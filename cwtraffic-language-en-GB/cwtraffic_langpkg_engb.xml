    <description>
        <![CDATA[
            <h1>CoalaWeb Traffic en-GB</h1>
            <p>This is the en-GB language pack for the CoalaWeb Traffic extension it includes the language files for all of the associated parts of the system.</p>
        ]]>
    </description>
      <fileset>
          <!-- Admin component language folder -->
          <files folder="admin/en-GB" target="administrator/language/en-GB">
              <filename>en-GB.com_coalawebtraffic.ini</filename>
              <filename>en-GB.com_coalawebtraffic.sys.ini</filename>
          </files>
          <!-- Module language files -->
          <files folder="modules/en-GB" target="language/en-GB">
              <filename>en-GB.mod_coalawebtraffic.ini</filename>
              <filename>en-GB.mod_coalawebtraffic.sys.ini</filename>
          </files>
          <!-- Count Plugin language files -->
          <files folder="plugins/system/en-GB" target="administrator/language/en-GB">
              <filename>en-GB.plg_system_cwtrafficcount.ini</filename>
              <filename>en-GB.plg_system_cwtrafficcount.sys.ini</filename>
              <filename>en-GB.plg_system_cwtrafficclean.ini</filename>
              <filename>en-GB.plg_system_cwtrafficclean.sys.ini</filename>
          </files>
          <!-- Language pack language files -->
          <files folder="language/en-GB" target="language/en-GB">
              <filename>en-GB.files_cwtraffic_langpkg_engb.sys.ini</filename>
          </files>
      </fileset>
  </extension>
